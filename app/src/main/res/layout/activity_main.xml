<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.github.viliamvolosv.switchcontrol.example.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    android:orientation="vertical"
    android:layout_centerInParent="true">

    <com.github.viliamvolosv.switchcontrol.SwitchControl
        android:id="@+id/switchcontrol0"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        />

    <com.github.viliamvolosv.switchcontrol.SwitchControl
        android:id="@+id/switchcontrol1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:base_release_color="@color/md_deep_orange_900"
        app:base_press_color="@color/md_deep_orange_300"
        app:ball_release_color="@color/md_deep_orange_500"
        app:ball_press_color="@color/md_white_1000"
        app:radius="0dp"
        app:border_size="0dp"
        app:text_left="Left"
        app:text_right="Right"
        />

    <com.github.viliamvolosv.switchcontrol.SwitchControl
        android:id="@+id/switchcontrol2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        app:base_release_color="@color/md_indigo_900"
        app:base_press_color="@color/md_indigo_400"
        app:ball_release_color="@color/md_indigo_500"
        app:ball_press_color="@color/md_white_1000"
        app:icon_left="@drawable/ic_arrow_back_black_24dp"
        app:icon_right="@drawable/ic_arrow_forward_black_24dp"
        app:radius="10dp"
        app:border_size="2dp"
        app:text_left="Left"
        app:text_right="Right"
        />
    <com.github.viliamvolosv.switchcontrol.SwitchControl
        android:id="@+id/switchcontrol3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        app:base_release_color="@color/md_teal_900"
        app:base_press_color="@color/md_teal_50"
        app:ball_release_color="@color/md_teal_500"
        app:ball_press_color="@color/md_white_1000"
        app:icon_left="@drawable/ic_arrow_back_black_24dp"
        app:icon_right="@drawable/ic_arrow_forward_black_24dp"
        app:icon_left_selected="@drawable/ic_arrow_back_white_24dp"
        app:icon_right_selected="@drawable/ic_arrow_forward_white_24dp"
        app:radius="30dp"
        app:border_size="1dp"
        app:text_left="Left"
        app:text_right="Right"
        />

    <com.github.viliamvolosv.switchcontrol.SwitchControl
        android:id="@+id/switchcontrol4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        app:base_release_color="#EDEDED"
        app:base_press_color="#EDEDED"
        app:ball_release_color="#0093FA"
        app:ball_press_color="#0093FA"
        app:icon_left="@drawable/ic_arrow_back_black_24dp"
        app:icon_right="@drawable/ic_arrow_forward_black_24dp"
        app:icon_left_selected="@drawable/ic_arrow_back_white_24dp"
        app:icon_right_selected="@drawable/ic_arrow_forward_white_24dp"
        app:radius="30dp"
        app:border_size="1dp"
        app:text_left="Left"
        app:text_right="Right"
        />
</LinearLayout>
